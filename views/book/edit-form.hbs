<div>

  {{!-- {{bookToUpdate}} --}}

  <h3>Formulario de editar un libro</h3>

    <form action="/book/{{bookToUpdate._id}}/edit" method="post">

    <label for="title">Titulo</label>
    <input type="text" name="title" value="{{bookToUpdate.title}}">
    <br>
    <label for="description">Descripci√≥n</label>
    <input type="text" name="description" value="{{bookToUpdate.description}}">
    <br>
    {{!-- <label for="author">Autor</label>
    <input type="text" name="author" value="{{bookToUpdate.author}}"> --}}
    
    <select name="author" multiple="true">

      {{#each allAuthors}}

        {{#if this.isOnBook}}
          <option value="{{this._id}}" selected="true">{{this.name}}</option>
        {{else}}
          <option value="{{this._id}}">{{this.name}}</option>
        {{/if}}


      {{/each}}

    </select>

    <br>

    <button>Actualizar</button>

  </form>

</div>